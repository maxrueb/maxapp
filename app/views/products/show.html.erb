<p id="notice"><%= notice %></p>

<h3>Detailed Productinformation</h3>

<!-- <div class="col-lg-4 col-xs-12">
</div> -->

<div class="col-lg-6 col-xs-12">
	<p>
	  <strong>Name</strong><br>
	  <%= @product.name %>
	</p>

	<p>
	  <strong>Description</strong><br>
	  <%= @product.description %>
	</p>

	<p>
	  <strong>Image url</strong><br>
	  <%= @product.image_url %>
	</p>

	<p>
	  <strong>Color</strong><br>
	  <%= @product.color %>
	</p>

	<p>
		<strong>Average Rating</strong>
		<div class="rated" data-score="<%= @product.average_rating %>"></div> 
	</p>

	<p>
		<strong>Highest Comment</strong><br>
		<%= @product.highest_rating_comment %>
	</p>


	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
</div>

<!-- <div class="col-lg-4 col-xs-12">
</div> -->

<div class="col-lg-6 col-xs-12">
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>

    <p>
    	<div class="rating"></div>
	</p>

    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
</div>

