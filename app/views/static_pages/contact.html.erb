<div id="contact" class="contact data col-lg-12 col-md-12">
  <h2 >Write us directly</h2>

  <%= flash[:notice] %>

  <%= form_tag("/static_pages/thank_you") do %>

  <div class="row">
    <div>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true %>
      </div>      
      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", :required => true %>
      </div>      
    </div>
  </div>
  <%= submit_tag "Send" %>   
  <% end %>